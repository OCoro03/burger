<div class="container">
  <section id="page-name">
    <iframe src="https://giphy.com/embed/3ohjUObkKl8CyTFYf6" width="480" height="270" frameBorder="0"
      class="giphy-embed" allowFullScreen></iframe>
    <h1>Eat-Da-Buger</h1>
  </section>

  <section class="row">
    <div class="col-md-7 col-left">
      <table>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </table>
    </div>
    <div class="col-md-5 col-right">
      {{#each burgers}}
      {{#if devoured}}
      <div>{{id}}. {{burger_name}}</div>
      {{/if}}
      {{/each}}
    </div>
  </section>

  <h1>Add a Burger to DEVOUR</h1>
  <form class="create-form">

    <div class="form-group">
      <label for="name"></label>
      <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What burger would you like?"></textarea>
    </div>

    <button id="burger-me-up-scotty" type="submit">Add Burger</button>
  </form>
</div>